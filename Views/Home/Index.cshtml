@{
    ViewData["Title"] = "Home Page";
}

@* ---BANNER--- *@

<section id="banner" class="bg-primary">
    <div class="container ">
        <div class="row ">
            <div class="col-md-12 text-center">
                <h1 class="display-4 text-white">duiTrack</h1>
                <p class="text-white">Manage money wisely.</p>
                <a href="#record" class="btn btn-light">Record Expense</a>
            </div>
        </div>
    </div>
    <img src="/assets/wave1.png" class="bottom-img">
</section>

@* ---FORM--- *@

<section id="record">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto my-5">
                <div class="center">
                      <h4 class="text-center title">Record your expense</h4>
                </div>
              
                <!-- Form code begins -->
                <form class=" p-5" method="post">
                    <div class="mb-4 row">
                        <label for="date" class="col-3 col-md- col-form-label">Date:</label>
                        <div class="col-7">
                            <input type="date" id="date" name="expDate" class="form-control">
                        </div>
                    </div>

                    <div class="form-group mb-4 row">
                        <label for="category" class="col-3 col-form-label">Category:</label>
                        <div class="col-7">
                            <select id="category" name="category" class="form-control">
                                <option value="">Choose a category</option>
                                <option value="food">Food</option>
                                <option value="transportation">Transportation</option>
                                <option value="utilities">Utilities</option>
                                   <option value="transportation">Shopping</option>
                                <option value="utilities">Hutang</option>
                            </select>
                        </div>
                    </div>


                    <div class="form-group mb-4 row">
                        <label for="subcategory" class="col-3 col-form-label">Subcategory:</label>
                        <div class="col-7">
                            <input type="text" id="subcategory" name="subcategory" class="form-control">
                        </div>
                    </div>

                    <div class="form-group mb-4 row">
                        <label for="amount" class="col-3 col-form-label">Amount:</label>
                        <div class="col-7">
                            <input type="number" id="amount" name="amount" class="form-control">
                        </div>
                    </div>

                    <div class="form-group mb-4 row">
                        <label for="total" class="col-3 col-form-label">Total Expense:</label>
                        <div class="col-7">
                            <input type="number" id="total" name="total" class="form-control">
                        </div>
                    </div>

                    <div class="text-center">
                        <button class="btn btn-primary">Save</button>
                    </div>

                </form>

                <!-- Form code ends -->

            </div>
        </div>
    </div>

</section>
